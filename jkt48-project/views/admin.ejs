<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Admin Panel - JKT48 Service</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .table-card { border-radius: 15px; border: none; box-shadow: 0 5px 15px rgba(0,0,0,0.05); }
        .sidebar-brand { color: #df1f26; font-weight: bold; }
        .member-img { width: 45px; height: 45px; object-fit: cover; border-radius: 10px; }
        .badge-admin { background: #df1f26; color: white; }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <span class="navbar-brand sidebar-brand">JKT48 <span class="text-white">ADMIN</span></span>
            <a href="/dashboard" class="btn btn-outline-light btn-sm rounded-pill px-4">Kembali</a>
        </div>
    </nav>

    <div class="container pb-5">
        <div class="row mb-4">
            <div class="col-md-12 d-flex justify-content-between align-items-center">
                <h4><i class="fas fa-database me-2"></i>Database Management</h4>
                <div class="btn-group shadow-sm">
                    <a href="/admin/add" class="btn btn-danger"><i class="fas fa-plus me-2"></i>Tambah Manual</a>
                    <a href="/scrape" class="btn btn-dark"><i class="fas fa-sync me-2"></i>Sinkronisasi</a>
                </div>
            </div>
        </div>

        <div class="card table-card mb-5">
            <div class="card-header bg-white py-3 fw-bold">Daftar Member JKT48</div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-muted small">
                        <tr>
                            <th class="px-4">ID</th>
                            <th>FOTO</th>
                            <th>NAMA LENGKAP</th>
                            <th>PANGGILAN</th>
                            <th>AKSI</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% members.forEach(m => { %>
                        <tr>
                            <td class="px-4 text-muted"><%= m.id %></td>
                            <td><img src="<%= m.foto_url %>" class="member-img shadow-sm"></td>
                            <td class="fw-bold"><%= m.nama_lengkap %></td>
                            <td><span class="badge bg-secondary"><%= m.nama_panggilan %></span></td>
                            <td>
                                <a href="/admin/delete-member/<%= m.id %>" class="text-danger p-2" onclick="return confirm('Hapus member?')"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        </div>
</body>
</html>